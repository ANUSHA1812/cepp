#include<stdio.h>
#include<conio.h>
void main()
{
int a[50][50],diff=0,sum1=0,sum2=0;
printf("enter the limit");
scanf("%d",&n);
for(i=0;i<n;;i++)
{
  scanf("%d",&a[i][j]);
}
if(i==j)
{
  for(i=0;i<n;i++)
  {
    for(j=0;j<n;j++)
    { 
      sum1=sum1+a[i][j];
    }
  }
}
if(i+j=n-1)
{
  for(i=0;i<n;i++)
  { 
    for(j=0;j<n;j++)
      {
        sum2=sum2+a[i][j];
      }
  }
}
for(i=0;i<n;i++)
{
  for(j=0;j<n;j++)
  {
    diff=sum1-sum2;
  }
}
printf("diff is %d");
}
getch();
